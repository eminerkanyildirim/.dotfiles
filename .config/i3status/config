general { 
	colors = true 
	interval = 10
	markup = "pango"
} 

order += "cpu_usage"
order += "disk /" 
order +=  "memory"
order += "wireless wlp7s0" 
order += "ethernet enp8s0" 
order += "battery 1" 
order += "volume master"
order += "load" 
order += "time" 
 
disk "/" { 
    	format = "%used / %free" 
} 

wireless wlp7s0 { 
	format_up = "W: %quality %essid %ip" 
	format_down = "W: down" 
} 

ethernet enp8s0 { 
	format_up = "E: %ip" 
	format_down = "E: down" 
} 

battery 1 { 
     format = "%status %percentage %remaining" 
} 

load { 
    format = "%1min %5min %15min" 
} 

cpu_usage {
  format = "CPU: %cpu0 %cpu1"
  degraded_threshold = 90
  max_threshold = 95
}

memory {
  memory_used_method = classical
  format="%used/%total"
  }
time { 
    format = "%Y-%m-%d %H:%M:%S" 
} 

